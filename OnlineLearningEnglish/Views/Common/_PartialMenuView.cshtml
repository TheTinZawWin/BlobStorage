
<div id="mainMenu" class="pt-3 pb-3">
    @{
        var cssHome = "";
        var cssBooking = "";
        var cssBookingManagement = "";
        var cssResourceManagement = "";
        var cssUserManagement = "";
        var cssRoleManagement = "";
        var cssEmail = "";
        var cssReport = "";
        if (ViewBag.PageName == "DHB001" || ViewBag.PageName == "DHB002") { cssHome = "selected-menu"; }
        if (ViewBag.PageName == "SRB001Page" || ViewBag.PageName == "MRB001Page" || ViewBag.PageName == "SPT001" || ViewBag.PageName == "APV001") { cssBooking = "selected-menu"; }
        if (ViewBag.PageName == "BookingManagementPage" || ViewBag.PageName == "CNB001" || ViewBag.PageName == "TTS001" || ViewBag.PageName == "RSB001" || ViewBag.PageName == "RRB001" || ViewBag.PageName == "CLR001Page") { cssBookingManagement = "selected-menu"; }
        if (ViewBag.PageName == "ResourceManagementPage" || ViewBag.PageName == "RTC001" || ViewBag.PageName == "RSC001" || ViewBag.PageName == "ASC001" || ViewBag.PageName == "ARS001" || ViewBag.PageName == "ARS002" || ViewBag.PageName == "RTA001" || ViewBag.PageName == "RRA001" || ViewBag.PageName == "BRE001") { cssResourceManagement = "selected-menu"; }
        if (ViewBag.PageName == "USM001" || ViewBag.PageName == "UserManagementPage") { cssUserManagement = "selected-menu"; }
        if (ViewBag.PageName == "RoleManagementPage" || ViewBag.PageName == "DAA001" || ViewBag.PageName == "RLA001" || ViewBag.PageName == "RLC001") { cssRoleManagement = "selected-menu"; }
        if (ViewBag.PageName == "") { cssEmail = "selected-menu"; }
        if (ViewBag.PageName.Contains("RPT") || ViewBag.PageName == "ReportPage") { cssReport = "selected-menu"; }

        string functionCode = Session["FunctionCode"] == null ? "" : Session["FunctionCode"].ToString();
    }
    @if (functionCode.Contains("DHB001"))
    {
        int USR_TYP = Convert.ToInt16(Session["UserType"].ToString());
        if (USR_TYP == 1)
        {
            <a class="nav-link center @cssHome" href="@Url.Action("DHB001Page", "DHB001")">
                <div>
                    <i class="fas fa-layer-group fa-3x"></i>
                </div>
                <span>Home</span>
            </a>
        }
        else
        {
            <a class="nav-link center @cssHome" href="@Url.Action("DHB002Page", "DHB002")">
                <div>
                    <i class="fas fa-layer-group fa-3x"></i>
                </div>
                <span>Home</span>
            </a>
        }

    }
    @if (functionCode.Contains("SRB001") || functionCode.Contains("MRB001") || functionCode.Contains("SPT001") || functionCode.Contains("APV001"))
    {
        <a class="nav-link center @cssBooking" href="@Url.Action("SRB001Page", "SRB001")">
            <div>
                <i class="fas fa-building fa-3x"></i>
            </div>
            <span>Booking</span>
        </a>
    }
    @if (functionCode.Contains("CNB001") || functionCode.Contains("TTS001") || functionCode.Contains("RSB001") || functionCode.Contains("RRB001") || functionCode.Contains("CLR001"))
    {
        <a class="nav-link center @cssBookingManagement" href="@Url.Action("BookingManagementPage", "Home")">
            <div>
                <i class="fas fa-business-time fa-3x"></i>
            </div>
            <span>Booking Management</span>
        </a>
    }
    @if (functionCode.Contains("RTC001") || functionCode.Contains("RSC001") || functionCode.Contains("ASC001") || functionCode.Contains("ARS001") || functionCode.Contains("ARS002") || functionCode.Contains("RTA001") || functionCode.Contains("RRA001") || functionCode.Contains("BRE001"))
    {
        <a class="nav-link center @cssResourceManagement" href="@Url.Action("ResourceManagementPage", "Home")">
            <div>
                <i class="fas fa-cogs fa-3x"></i>
            </div>
            <span>Resource Management</span>
        </a>
    }
    @if (functionCode.Contains("USM001"))
    {
        <a class="nav-link center @cssUserManagement" href="@Url.Action("UserManagementPage", "Home")">
            <div>
                <i class="fas fa-user-cog fa-3x"></i>
            </div>
            <span>User Management</span>
        </a>
    }
    @if (functionCode.Contains("DAA001") || functionCode.Contains("RLA001") || functionCode.Contains("RLC001"))
    {
        <a class="nav-link center @cssRoleManagement" href="@Url.Action("RoleManagementPage", "Home")">
            <div>
                <i class="fas fa-tools fa-3x"></i>
            </div>
            <span>Role Management</span>
        </a>
    }

    @if (functionCode.Contains("EmailPage"))
    {
        <a class="nav-link center @cssEmail" href="@Url.Action("EmailPage", "Home")">
            <div>
                <i class="fas fa-envelope-square fa-3x"></i>
            </div>
            <span>Email</span>
        </a>
    }
    @if (functionCode.Contains("RPT"))
    {
        <a class="nav-link center @cssReport" href="@Url.Action("ReportPage", "Home")">
            <div>
                <i class="fas fa-file-alt fa-3x"></i>
            </div>
            <span>Report</span>
        </a>
    }
</div>
